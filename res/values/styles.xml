	</style>

	
	<!-- White styles -->
	<style name="list_style_white">
		<item name="android:background">@layout/corner_white</item>
	</style>

	<style name="view_style_white">
        <item name="android:background">@color/white</item>
		<item name="android:textColor">@color/textcolor</item>
	</style>
	<style name="title_style_white">
		<item name="android:src">@drawable/metrosp_white</item>
	</style>
	<style name="text_style_white">
		<item name="android:textColor">@color/textcolor</item>
	</style>
