<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomWindowTitleBackground">
        <item name="android:background">#323331</item>
    </style>
 
    <style name="CustomTitleTheme" parent="android:Theme">
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

	<!-- Black theme -->
	<style name="Black.Theme" parent="CustomTitleTheme">
		<item name="listStyle">@style/list_style_black</item>
		<item name="viewStyle">@style/view_style_black</item>
		<item name="titleStyle">@style/title_style_black</item>
		<item name="textStyle">@style/text_style_black</item>
	</style>

	<!-- White theme -->
	<style name="White.Theme" parent="CustomTitleTheme">
		<item name="listStyle">@style/list_style_white</item>
		<item name="viewStyle">@style/view_style_white</item>
		<item name="titleStyle">@style/title_style_white</item>
		<item name="textStyle">@style/text_style_white</item>
	</style>
</resources>
